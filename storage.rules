rules_version = '2';

// Règles de sécurité Firebase Storage pour WeCamp
// TEMPORAIRE: Règles simplifiées pour le débogage
service firebase.storage {
  match /b/{bucket}/o {
    // Autoriser tout pour les utilisateurs authentifiés (temporaire)
    match /{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.resource.size < 20 * 1024 * 1024;
    }
  }
}
